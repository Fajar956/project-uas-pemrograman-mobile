<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.ExplorerActivity">

    <!-- ScrollView untuk konten yang bisa di-scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where will you go next?"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/darkBlue"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find your perfect escape with curated destinations and activities."
                android:textSize="16sp"
                android:textColor="@color/darkBlue"
                android:layout_marginBottom="24dp" />

            <!-- Search Bar -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/search_icon"
                        android:layout_marginEnd="8dp"
                        app:tint="@color/darkBlue" />

                    <EditText
                        android:id="@+id/searchEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Search destinations, hotels, activities..."
                        android:textColor="@color/darkBlue"
                        android:textColorHint="#888888"
                        android:textSize="16sp"
                        android:imeOptions="actionSearch"
                        android:inputType="text" />

                    <ImageView
                        android:id="@+id/filterIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/filter_icon"
                        android:padding="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="@color/darkBlue" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Browse by Category -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse by Category"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/darkBlue"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categoriesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:clipToPadding="false"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                tools:listitem="@layout/viewholder_category_card" />

            <!-- Trending Now -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trending Now"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/darkBlue"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/seeAllTrending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See All"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/trendingRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp"
                android:clipToPadding="false"
                android:paddingHorizontal="4dp"
                tools:listitem="@layout/viewholder_trending_card" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation Bar -->
    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cnb_menuResource="@menu/menu_bottom"
        android:background="@color/white"
        android:elevation="8dp"
        android:padding="4dp"
        app:cnb_iconSize="20sp"
        app:cnb_radius="50dp"
        app:cnb_orientationMode="horizontal"
        app:cnb_unselectedColor="@color/darkBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>