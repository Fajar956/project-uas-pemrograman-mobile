<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ShapeableImageView untuk gambar utama -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/trendingImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.roundedImageView"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <!-- Overlay teks -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_overlay">

            <TextView
                android:id="@+id/trendingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bali, Indonesia"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/trendingRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⭐ 4.8 • 2.3K reviews"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/trendingLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bali, Indonesia"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/trendingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$900 /Person"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </FrameLayout>
</androidx.cardview.widget.CardView>